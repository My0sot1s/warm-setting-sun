.navigation {
  position: fixed;
  bottom: var(--window-bottom);
  width: 100vw;
  height: 20vw;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #bbb;
  background-color: white;
}
.navigation .list {
  position: relative;
  width: 33vw;
  z-index: 1;
}
.navigation .list .navigator {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  text-align: center;
  font-weight: 500;
}
.navigation .list .navigator .uni-icons {
  position: relative;
  display: block;
  transition: 0.5s;
}
.navigation .list .navigator .text {
  font-weight: 400;
  transition: 0.5s;
}
.navigation .active .navigator .uni-icons {
  transform: translateY(-5vw);
}
.navigation .active .navigator .text {
  transform: translateY(-1vw);
}
.navigation .indicator {
  position: absolute;
  top: -30%;
  width: 14vw;
  height: 14vw;
  background-color: orange;
  border-radius: 50%;
  box-shadow: 0px 0px 0px #ffaa00, inset 10px 10px 11px rgba(250, 252, 255, 0.48), inset -10px -10px 15px rgba(255, 191, 0, 0.2);
}
