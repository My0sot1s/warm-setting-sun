.main {
  box-sizing: border-box;
  background-color: #eeeeee;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10vw 0;
  padding-bottom: 30vw;
  min-height: calc(100vh - 30vw);
}
.main .setting-cell {
  box-sizing: border-box;
  width: 90vw;
  height: 12vw;
  line-height: 12vw;
  margin-bottom: 6vw;
  border-radius: 3vw;
  background-color: white;
  padding: 0 5vw;
  box-shadow: 1px 3px 3px #bbb;
}
