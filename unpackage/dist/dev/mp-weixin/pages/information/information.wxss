.main {
  background-color: #eeeeee;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main .title {
  width: 100%;
  font-size: 6vw;
  font-weight: lighter;
}
.main .user-input {
  box-sizing: border-box;
  width: 100%;
  height: 13vw;
  display: flex;
  align-items: center;
  padding: 1vw 1vw;
  margin: 4vw 0;
  border-bottom: 2px solid #eeeeee;
}
.main .user-input text {
  margin-right: 4vw;
}
.main .user-input uni-easyinput {
  box-sizing: border-box;
}
.main .base-information {
  box-sizing: border-box;
  margin: 5vw 0;
  padding: 5vw;
  background-color: white;
  width: 90vw;
  border-radius: 4vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main .base-information .avatar-picker {
  margin-bottom: 10vw;
}
.main .base-information .user-identity {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  padding: 1vw 1vw;
  margin: 4vw 0;
  border-bottom: 2px solid #eeeeee;
}
.main .base-information .user-identity text {
  margin-right: auto;
}
.main .base-information .user-sex {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  padding: 1vw 1vw;
  margin: 4vw 0;
  border-bottom: 2px solid #eeeeee;
}
.main .base-information .user-sex text {
  margin-right: auto;
}
.main .more-information {
  width: 90vw;
  background-color: white;
  border-radius: 4vw;
  box-sizing: border-box;
  margin: 5vw 0;
  padding: 5vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.main .sun-button {
  width: 80vw;
  margin: 5vw 0 10vw 0;
}
